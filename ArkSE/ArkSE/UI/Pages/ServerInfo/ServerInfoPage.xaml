                xmlns:serverInfo="clr-namespace:ArkSE.BL.ViewModels.ServerInfo;assembly=ArkSE"
                xmlns:dataObjects="clr-namespace:ArkSE.DAL.DataObjects;assembly=ArkSE.DAL"
                xmlns:system="clr-namespace:System;assembly=netstandard"
                x:DataType="serverInfo:ServerInfoViewModel"
                x:Class="ArkSE.UI.Pages.ServerInfo.ServerInfoPage">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding OfficialGameServerObjects}"
                  SelectionMode="None" ItemTapped="ListView_OnItemTapped"
